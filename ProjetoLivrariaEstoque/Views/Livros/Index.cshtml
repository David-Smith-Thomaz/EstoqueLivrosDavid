@model IEnumerable<ProjetoLivrariaEstoque.Models.Livro>

@{
    ViewBag.Title = "Index";
}

<h2>Controle Livros</h2>

<p>
    @Html.ActionLink("Criar novo registro", "Create", null, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Nome")
        </th>
        <th>
            @Html.Label("Autor")
        </th>
        <th>
            @Html.Label("Quantidade")
        </th>
        <th>
            @Html.Label("Observações")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacoes)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class="btn btn-warning" }) 
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
